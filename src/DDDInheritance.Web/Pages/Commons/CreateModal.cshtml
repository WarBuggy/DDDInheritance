@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DDDInheritance.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DDDInheritance.Web.Pages.Commons
@using DDDInheritance.Commons;
@using System.Globalization
@inject IHtmlLocalizer<DDDInheritanceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Commons/CreateModal" autocomplete="off">
    <abp-modal id="CommonCreateModal">
        <abp-modal-header title="@L["NewCommon"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Common.Code" />

            <abp-input asp-for="Common.Name" />

            <abp-select asp-for="Common.Status" />

            <abp-input asp-for="Common.Linked" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>